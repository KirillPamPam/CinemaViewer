<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">
            org.hibernate.dialect.MySQLDialect
        </property>
        <property name="hibernate.connection.driver_class">
            com.mysql.jdbc.Driver
        </property>
        
        <property name="hibernate.connection.url">
            jdbc:mysql://localhost/cinemaviewer
        </property>
        <property name="hibernate.connection.username">
            
        </property>
        <property name="hibernate.connection.password">

        </property>

        <mapping class="ru.kir.cinema.domain.Person"/>
        <mapping class="ru.kir.cinema.domain.Position"/>
        <mapping class="ru.kir.cinema.domain.Genre"/>
        <mapping class="ru.kir.cinema.domain.Country"/>
        <mapping class="ru.kir.cinema.domain.Film"/>

    </session-factory>
</hibernate-configuration>